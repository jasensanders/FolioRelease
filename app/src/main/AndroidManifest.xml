<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.enrandomlabs.jasensanders.v1.folio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <application
        android:name="com.enrandomlabs.jasensanders.v1.folio.FolioApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/auto_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <provider
            android:name="com.enrandomlabs.jasensanders.v1.folio.database.FolioProvider"
            android:authorities="com.enrandomlabs.jasensanders.v1.folio" />

        <service
            android:name="com.enrandomlabs.jasensanders.v1.folio.services.FetchMovieDataService"
            android:exported="false" />
        <service
            android:name="com.enrandomlabs.jasensanders.v1.folio.services.FetchBookService"
            android:exported="false"/>

        <!-- Detail Widget -->
        <receiver
            android:name="com.enrandomlabs.jasensanders.v1.folio.widget.DetailWidgetProvider"
            android:enabled="@bool/widget_detail_enabled"
            android:label="@string/title_widget_detail">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.jasensanders.v1.folio.ACTION_DATA_UPDATED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_detail" />
        </receiver>

        <service
            android:name="com.enrandomlabs.jasensanders.v1.folio.widget.DetailWidgetRemoteViewsService"
            android:enabled="@bool/widget_detail_enabled"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name="com.enrandomlabs.jasensanders.v1.folio.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>
        <activity
            android:name="com.enrandomlabs.jasensanders.v1.folio.AddNewActivity"
            android:label="@string/title_add_new"
            android:launchMode="standard"
            android:parentActivityName="com.enrandomlabs.jasensanders.v1.folio.MainActivity"
            android:theme="@style/AppTheme.AddNew"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.enrandomlabs.jasensanders.v1.folio.MainActivity" />
        </activity>
        <activity
            android:name="com.enrandomlabs.jasensanders.v1.folio.DetailActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.enrandomlabs.jasensanders.v1.folio.MainActivity"
            android:theme="@style/AppTheme.Details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.enrandomlabs.jasensanders.v1.folio.MainActivity" />
        </activity>
        <activity
            android:name="com.enrandomlabs.jasensanders.v1.folio.barcode.BarcodeActivity"
            android:label="@string/barcode_activity_label" />
        <activity
            android:name="com.enrandomlabs.jasensanders.v1.folio.RetailerSearchActivity"
            android:label="@string/title_search_retailers"
            android:parentActivityName="com.enrandomlabs.jasensanders.v1.folio.MainActivity"
            android:theme="@style/AppTheme.RetailSearch"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.enrandomlabs.jasensanders.v1.folio.MainActivity" />
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.enrandomlabs.jasensanders.v1.folio.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>