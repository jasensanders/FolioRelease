<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <EditText
        android:id= "@+id/dialogRuntime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sub_text_margin_top"
        android:inputType="number"
        android:hint="@string/EnterRuntime"
        android:textColor="@color/colorBlack"
        android:maxLength="3"
        android:textColorHint="@color/colorAccentDim"
        android:focusable="true"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:gravity="center_vertical|center_horizontal" />
    <EditText
        android:id= "@+id/dialogRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sub_text_margin_top"
        android:hint="@string/EnterRating"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorAccentDim"
        android:focusable="true"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:gravity="center_vertical|center_horizontal" />

</LinearLayout>